<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:src="@drawable/pathway"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="0dp"
                android:padding="0dp">
                <ImageView
                    android:id="@+id/peaoPreto"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/preto" />
                <ImageView
                    android:id="@+id/peaoAmarelo"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/amarelo" />
                <ImageView
                    android:id="@+id/peaoVerde"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/verde" />
                <ImageView
                    android:id="@+id/peaoAzul"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/azul" />
                <ImageView
                    android:id="@+id/peaoVermelho"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/vermelho" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:padding="4dp">

                <TextView
                    android:id="@+id/numCard"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:text="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="8dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="32dp" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>